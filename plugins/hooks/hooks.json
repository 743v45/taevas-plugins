{
  "description": "Sound notification hooks for Claude Code task events",
  "hooks": {
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/notify.sh '任务开始' task_start",
            "matcher": "TaskCreate"
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/notify.sh '命令开始' command_start",
            "matcher": "Bash"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/notify.sh '命令完成' command_complete",
            "matcher": "Bash"
          }
        ]
      }
    ]
  }
}
